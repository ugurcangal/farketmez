<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">


    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="49dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/greenBack"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@drawable/profile_green_rec"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoIV"/>

    <View
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/helloTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merhaba,"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/comfortaa"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/greenBack"
        app:layout_constraintEnd_toEndOf="@id/greenBack"
        app:layout_constraintStart_toStartOf="@id/greenBack"/>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/comfortaa"
        app:layout_constraintTop_toBottomOf="@id/helloTxt"
        app:layout_constraintEnd_toEndOf="@id/greenBack"
        app:layout_constraintStart_toStartOf="@id/greenBack"/>

    <TextView
        android:id="@+id/surnameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/comfortaa"
        app:layout_constraintTop_toBottomOf="@id/nameTxt"
        app:layout_constraintEnd_toEndOf="@id/greenBack"
        app:layout_constraintStart_toStartOf="@id/greenBack"/>



    <ImageView
        android:id="@+id/btnBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_page_button_bg"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greenBack"/>

    <ImageButton
        android:id="@+id/favoriteBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:backgroundTint="#00000000"
        android:paddingEnd="110dp"
        android:src="@drawable/profile_favorite_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toTopOf="@id/btnBG" />
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/brown_line"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/favoriteBtn"/>



    <ImageButton
        android:id="@+id/blocksBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:paddingEnd="60dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/profile_blocks_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/favoriteBtn" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/brown_line"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/blocksBtn"/>


    <ImageButton
        android:id="@+id/signoutBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:paddingEnd="90dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/profile_signout"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/blocksBtn" />






</androidx.constraintlayout.widget.ConstraintLayout>


