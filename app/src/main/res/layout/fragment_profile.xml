<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">


    <View
        android:id="@+id/greenBack"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@drawable/profile_green_rec"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/helloTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merhaba,"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/comfortaa"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/greenBack"
        app:layout_constraintStart_toStartOf="@id/greenBack"/>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/comfortaa"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/helloTxt"
        app:layout_constraintStart_toStartOf="@id/greenBack"/>

    <TextView
        android:id="@+id/surnameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/comfortaa"
        app:layout_constraintTop_toBottomOf="@id/helloTxt"
        app:layout_constraintStart_toEndOf="@id/nameTxt"/>


    <ImageView
        android:id="@+id/signoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signout_icon"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@id/greenBack"
        app:layout_constraintTop_toTopOf="@id/greenBack"/>

    <ImageView
        android:id="@+id/btnBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_page_button_bg"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greenBack"/>

    <ImageButton
        android:id="@+id/favoriteBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:backgroundTint="#00000000"
        android:paddingEnd="80dp"
        android:src="@drawable/profile_favorite_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toTopOf="@id/btnBG" />
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/brown_line"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/favoriteBtn"/>

    <ImageButton
        android:id="@+id/personalInfoBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:paddingEnd="20dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/profile_personalinfo_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/favoriteBtn" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/brown_line"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/personalInfoBtn"/>

    <ImageButton
        android:id="@+id/blocksBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:paddingEnd="20dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/profile_blocks_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/personalInfoBtn" />

    <View
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/brown_line"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/blocksBtn"/>

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:paddingEnd="80dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/profile_settings_btn"
        app:layout_constraintEnd_toEndOf="@+id/btnBG"
        app:layout_constraintStart_toStartOf="@id/btnBG"
        app:layout_constraintTop_toBottomOf="@id/blocksBtn" />




</androidx.constraintlayout.widget.ConstraintLayout>


